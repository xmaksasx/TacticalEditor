<UserControl
    x:Class="TacticalEditor.VisualObject.VisualPpm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="30"
    Height="30"
    ClipToBounds="True"
    Margin="-15,-15,0,0"
    PreviewMouseLeftButtonDown="VisualPoint_OnPreviewMouseLeftButtonDown"
    PreviewMouseLeftButtonUp="VisualPoint_OnPreviewMouseLeftButtonUp"
    PreviewMouseMove="VisualPoint_OnPreviewMouseMove">
    <Grid     ClipToBounds="True">
        <Grid     ClipToBounds="True"
            x:Name="Root"
            Width="30"
            Height="30">
            <Ellipse
                ClipToBounds="True"
                x:Name="El"
                Width="30"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Fill="#3F9B9B9B"
                Stroke="Black"
                StrokeThickness="0.6" />
            <TextBlock
                Name="NumberInRoute"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Foreground="Black"
                Text="0"
                TextWrapping="Wrap" />
        </Grid>
    </Grid>
</UserControl>

